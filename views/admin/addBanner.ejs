<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shoes Store Admin</title>
    <link rel="icon" href="http://localhost:5000/images/shoes-store-logo.png">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css1/adminlogin.css">
</head>
<body>
    <%- include('../partials/adminheader.ejs') %>

    <section class="first-footer" style="border-bottom: 2px solid #000;">
        <footer class="text-center text-white" style="background-color: #ffffff;">
          <div class="container p-4 pb-0">
            <section class="">
              <p class="d-flex justify-content-center text-nowrap">
                <span class="me-3" style="color:black; font-weight:bold; font-size:200%; margin-right: 1030px; margin-top: 15px;">ADMIN/ADD BANNER</span>
              </p>
            </section>
          </div>
        </footer>
    </section>
    
    
        
            <div class="row flex-nowrap">
                
              <%- include('../partials/adminsidebar.ejs') %>

              <div class="container">
                <div class="row justify-content-center mt-5">
                    <div class="col-md-8">
                        <div class="card" style="background-color: #DFDFDF; height:600px;">
                            <div class="card-header" style="background-color: #DFDFDF; color:black">
                                <h3 class="text-center">NEW BANNER</h3>
                            </div>
                            <div class="card-body">
                                <form action="/addbanner" method="post" enctype="multipart/form-data">
                                    <div class="form-row">
                                        <div class="col d-flex justify-content-center align-items-center">
                                            <% if(locals.alert){ %>
                                                <p class="alert alert-danger text-center"><%= locals.alert %></p>
                                            <% } %>
                                        </div>
                                    </div>                                    
                                    <div class="form-row">
                                        <div class="form-group col-md-12">
                                            <label for="bannerId" style="font-weight: 600;">BANNER ID</label>
                                            <input type="text" name="bannerId" class="form-control" id="" placeholder="" style="border-radius: 1em;">
                                        </div>
                                        <div class="form-row">
                                            <div class="form-group col-md-6">
                                                <label for="bannerImage" style="font-weight: 600;">IMAGE</label>
                                                <input name="bannerImage" type="file" id="imageInput"  accept="image/*">
                                            </div>
                                            <div class="form-group col-md-6">
                                                <img id="imagePreview" src="" alt="Image Preview" style="width: 250px; height: 150px;">
                                            </div>
                                        </div>
                                    </div>
                                    <button type="submit" class="btn btn-success mx-auto d-block" style="margin-top: 100px;">CREATE BANNER</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>  
            </div>

            <script>

                //image
            const imageInput = document.getElementById('imageInput');
            const imagePreview = document.getElementById('imagePreview');
            imageInput.addEventListener('change', function () {
            const file = imageInput.files[0];

            if (file) {
            const reader = new FileReader();

            reader.onload = function (e) {
            imagePreview.src = e.target.result;
            imagePreview.style.display = 'block';
            };

            reader.readAsDataURL(file);
            } else {
            imagePreview.src = '';
            imagePreview.style.display = 'none';
            }
          });

            </script>

    
    
      <%- include('../partials/adminfooter.ejs') %>