<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Shoes Store Website</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800" rel="stylesheet">

    <link rel="stylesheet" href="/css/open-iconic-bootstrap.min.css">
    <link rel="stylesheet" href="/css/animate.css">
    <link rel="stylesheet" href="/css/owl.carousel.min.css">
    <link rel="stylesheet" href="/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="/css/magnific-popup.css">

    <link rel="stylesheet" href="/css/aos.css">

    <link rel="stylesheet" href="/css/ionicons.min.css">

    <link rel="stylesheet" href="/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="/css/jquery.timepicker.css">

	<link rel="stylesheet" href="/css1/userlogin.css">
    <link rel="stylesheet" href="/css/flaticon.css">
    <link rel="stylesheet" href="/css/icomoon.css">
    <link rel="stylesheet" href="/css/style.css">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

  </head>
  <body class="goto-here">
	
	<%- include('../partials/header.ejs') %>

      <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
          <div class="col-md-9 ftco-animate text-center">
			<p class="breadcrumbs"><span class="mr-2"><a href=""></a></span> <span></span></p>       	
            <h1 class="mb-0 bread" style="font-weight:600;">CHECKOUT</h1>
          </div>
        </div>
      </div>
  

    <section class="ftco-section">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-xl-10 ftco-animate">
			<% if(locals.alert) { %>
				<p class="alert alert-danger text-center"><%= locals.alert %></p>
			<% } %>
						<form action="/checkout" class="billing-form" method="POST">
							<h3 class="mb-4 billing-heading">Billing Details</h3>
							
	          	<div class="row align-items-end">
	          		<div class="col-md-6">
	                <div class="form-group">
	                	<label for="firstname">Firt Name</label>
	                  <input type="text" name="firstName" class="form-control" placeholder="" value="<%= user.firstName %>">
	                </div>
	              </div>
	              <div class="col-md-6">
	                <div class="form-group">
	                	<label for="lastname">Last Name</label>
	                  <input type="text" name="lastName" class="form-control" placeholder="" value="<%= user.lastName %>">
	                </div>
                </div>
                <div class="w-100"></div>
				<div class="col-md-12">
					<div class="form-group">
					<label for="streetaddress">Address</label>
					<% if(defaultAddress) { %>
				  <input type="text" name="address" class="form-control" placeholder="House name and Post name" value="<%= defaultAddress.address %>">
				  <% }else{ %>
					<input type="text" name="address" class="form-control" placeholder="House name and Post name" value="">
					<% } %>
				</div>
				</div>
				<div class="w-100"></div>
		            <div class="col-md-6">
		            	<div class="form-group">
		            		<label for="country">Town</label>
							<% if(defaultAddress) { %>
		            		<input type="text" name="town" class="form-control" placeholder="" value="<%= defaultAddress.town %>">
							<% }else{ %>
							<input type="text" name="town" class="form-control" placeholder="" value="">
							<% } %>
		            	</div>
		            </div>
					<div class="col-md-6">
						<div class="form-group">
						<label for="country">Pincode</label>
						<% if(defaultAddress) { %>
					    <input type="text" name="pincode" class="form-control" placeholder="" value="<%= defaultAddress.pincode %>">
						<% }else{ %>
						<input type="text" name="pincode" class="form-control" placeholder="" value="">
						<% } %>
					</div>
					</div>
		            
		            
		            <div class="w-100"></div>
		            <div class="col-md-6">
		            	<div class="form-group">
	                	<label for="towncity">District</label>
					  <% if(defaultAddress) { %>
	                  <input type="text" name="district" class="form-control" placeholder="" value="<%= defaultAddress.district %>">
					  <% }else{ %>
					  <input type="text" name="district" class="form-control" placeholder="" value="">
					  <% } %>
	                </div>
		            </div>
		            <div class="col-md-6">
		            	<div class="form-group">
		            		<label for="postcodezip">State</label>
					  <% if(defaultAddress) { %>
	                  <input type="text" name="state" class="form-control" placeholder="" value="<%= defaultAddress.state %>">
					  <% }else{ %>
					  <input type="text" name="state" class="form-control" placeholder="" value="">
					  <% } %>
	                </div>
		            </div>
		            <div class="w-100"></div>
		            <div class="col-md-6">
	                <div class="form-group">
	                	<label for="phone">Country</label>
					  <% if(defaultAddress) { %>
	                  <input type="text" name="country" class="form-control" placeholder="" value="<%= defaultAddress.country %>">
					  <% }else{ %>
					  <input type="text" name="country" class="form-control" placeholder="" value="">
					  <% } %>
	                </div>
	              </div>
	              <div class="col-md-6">
	                <div class="form-group">
	                  <label for="emailaddress">Phone</label>
	                  <input type="text" name="mobileNumber" class="form-control" placeholder="" value="<%= user.mobileNumber %>">
	                </div>
                </div>
                <div class="w-100"></div>
                <div class="col-md-12">
                	<div class="form-group mt-4">
										<div class="">
										  <label class="mr-3"><a href='/address' class="text-dark"><span type="text" name="optradio"> Create new address? </span></a>
										  <label class="ml-5"><a href='/address' class="text-dark"><span type="text" name="optradio"> Ship to different address?</span></a> 
										</div>
									</div>
                </div>
	            </div>
				<div class="coupon-section">
					<h5 class="mb-4 billing-heading mt-4">Apply Coupon</h5>
					<div class="row align-items-end">
						<div class="col-md-5">
							<div class="form-group">
								<input type="text" class="form-control equal-size" id="couponCode" name="couponCode" placeholder="Enter coupon code">
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<button type="button" class="btn btn-primary equal-size" id="applyCouponButton">Apply Coupon</button>
							</div>
						</div>
					</div>
				</div>
				<div class="row mt-5 pt-3 d-flex">
					<div class="col-md-6 d-flex">
						<div class="cart-detail cart-total bg-light p-3 p-md-4">
							<h3 class="billing-heading mb-4">Cart Total</h3>
							<p class="d-flex">
									  <span>Subtotal</span>
									  <span name="totalPrice" value="<%= cartTotal %>">₹<%= cartTotal %></span>
								  </p>
								  <p class="d-flex">
									  <span>Delivery</span>
									  <span>₹</span>
								  </p>
								  <p class="d-flex">
									  <span>Discount</span>
									  <span>₹</span>
								  </p>
								  <hr>
								  <p class="d-flex total-price">
									  <span>Total</span>
									  <span name="totalPrice" value="<%= cartTotal %>">₹<%= cartTotal %></span>
								  </p>
								  </div>
					</div>
					<div class="col-md-6">
						<div class="cart-detail bg-light p-3 p-md-4">
							<h3 class="billing-heading mb-4">Payment Method</h3>
									  <div class="form-group">
										  <div class="col-md-12">
											  <div class="radio">
												 <label><input type="radio" name="paymentMethod" class="mr-2" value="Online Payment"> Online Payment</label>
											  </div>
										  </div>
									  </div>
									  <div class="form-group">
										  <div class="col-md-12">
											  <div class="radio">
												 <label><input type="radio" name="paymentMethod" class="mr-2" value="Cash on delivery"> Cash on delivery</label>
											  </div>
										  </div>
									  </div>
									  <div class="form-group">
										  <div class="col-md-12">
											  <div class="radio">
												 <label><input type="radio" name="paymentMethod" class="mr-2" value="Wallet"> Wallet</label>
											  </div>
										  </div>
									  </div>
									  <p><button type="submit" class="btn btn-primary py-3 px-4">Place an order</button></p>								  </div>
					</div>
				</div>

	          </form><!-- END -->

			  


	          


          </div> <!-- .col-md-8 -->
        </div>
      </div>
    </section> <!-- .section -->
		

   
  <script>

		$(document).ready(function(){

		var quantitiy=0;
		   $('.quantity-right-plus').click(function(e){
		        
		        // Stop acting like a button
		        e.preventDefault();
		        // Get the field name
		        var quantity = parseInt($('#quantity').val());
		        
		        // If is not undefined
		            
		            $('#quantity').val(quantity + 1);

		          
		            // Increment
		        
		    });

		     $('.quantity-left-minus').click(function(e){
		        // Stop acting like a button
		        e.preventDefault();
		        // Get the field name
		        var quantity = parseInt($('#quantity').val());
		        
		        // If is not undefined
		      
		            // Increment
		            if(quantity>0){
		            $('#quantity').val(quantity - 1);
		            }
		    });
		    
		});

	</script>
    
