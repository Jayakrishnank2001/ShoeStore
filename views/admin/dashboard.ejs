          <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

          <script>

            const ctx1 = document.getElementById('myChart1');
          
            new Chart(ctx1, {
              type: 'pie',
              data: {
                labels: ['Red', 'Blue'],
                datasets: [{
                  label: '',
                  data: [17, 19],
                  backgroundColor: [
                  'rgba(0, 207, 140, 0.8)',
                  'rgba(255, 99, 132, 01)'
                  ],
                  borderWidth: 1
                }]
              },
              options: {
                scales: {
                  y: {
                    beginAtZero: true
                  }
                }
              }
            });


            const ctx2 = document.getElementById('myChart2');
          
            new Chart(ctx2, {
              type: 'bar',
              data: {
                labels: ['Order', 'Revenue'],
                datasets: [{
                  label: '',
                  data: [12, 19],
                  backgroundColor: [
                  'rgba(255, 99, 132, 01)',
                  ],
                  borderColor: [
                 'rgb(255, 99, 132)',
                ],
                  borderWidth: 2
                }]
              },
              options: {
                scales: {
                  y: {
                    beginAtZero: true
                  }
                }
              }
            });

          </script>

    
