<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shoes store-Login</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css1/userlogin.css">
</head>
<body>
<%- include('../partials/header.ejs') %>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="card mt-5">
                    <div class="card-header">
                        <h3 class="text-center">RESET PASSWORD</h3>
                    </div>
                    <div class="card-body">
                        <form action="/resetpassword" method="post">
                            <div class="form-group">
                                <% if (locals.alert){ %>
                                    <p class="alert alert-danger"><%= locals.alert %></p>
                                    <% } %>
                                <input type="text" name="newPassword" class="form form-control" id="username" placeholder="New Password">
                            </div>
                            <div class="form-group">
                                <input type="password" name="confirmPassword" class="form-control" id="password" placeholder="Confirm New Password">
                            </div>
                            <button type="submit" class="btn btn-yellow btn-block">Set Password</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <section class="first-footer">
        <footer class="text-center text-white" style="background-color: #0667AC;">
          <div class="container p-4 pb-0">
            <section class="">
              <p class="d-flex justify-content-center align-items-center">
                <span class="me-3">JOIN SHOES STORE AND GET 15% OFF</span>
                <a href="/signup"><button type="button" class="btn btn-signup btn-rounded">
                    SIGN UP FOR FREE
                </button></a>
              </p>
            </section>
          </div>
        </footer>
    </section>

    
<%- include('../partials/footer.ejs') %>
