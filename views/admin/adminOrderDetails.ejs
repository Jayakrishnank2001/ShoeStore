<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shoes Store Admin</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css1/adminlogin.css">
</head>
<body>
    
    <style>

        .gradient-custom {
            background: #fefdff;
            background: -webkit-linear-gradient(to top left, rgb(255, 255, 255), rgba(246, 243, 255, 1));
            background: linear-gradient(to top left, rgb(255, 255, 255), rgba(246, 243, 255, 1))
        }
        .table-data{
          font-weight:400;
        }
        .custom-card {
          background-color: #f7f5f5;
          box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }


    </style>

 <%- include('../partials/adminheader.ejs') %>

 <section class="h-100 gradient-custom">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12">
            <div class="custom-card" style="border-radius: 10px;">
            <div class="card-body p-4">
              <div class="d-flex justify-content-between align-items-center mb-4 table-data">
                <p class="small text-muted mb-0" style="font-size: 18px;">Order ID : #<%= order._id.toString().slice(0, 9) %></p>
                <p class="small text-muted mb-0" style="font-size: 18px;">Ordered Date : <%= order.orderDate ? order.orderDate.toISOString().split('T')[0] : '' %></p>
              </div>
              <div class="card shadow-0 border mb-4">
                <div class="card-body">
                  <% order.products.forEach(product => { %>
                  <div class="row">
                    <div class="col-md-3">
                      <img src="/uploads/<%= product.productId.image[0] %>" class="img-fluid"
                        alt="Product Image" style="max-width: 120px; max-height: 160px;">
                    </div>
                    <div class="col-md-3 d-flex align-items-center table-data">
                      <p class="text-muted mb-0" style="font-size: 18px;"><%= product.productId.productName %></p>
                    </div>
                    <div class="col-md-1 text-center d-flex align-items-center table-data">
                      <p class="text-muted mb-0" style="font-size: 18px;"><%= product.productId.gender %></p>
                    </div>
                    <div class="col-md-1 text-center d-flex align-items-center table-data" style="margin-left: 70px;">
                      <p class="text-muted mb-0" style="font-size: 18px;">Qty: <%= product.orderQuantity %></p>
                    </div>
                    <div class="col-md-2 text-center d-flex align-items-center table-data" style="margin-left: 70px;">
                      <p class="text-muted mb-0" style="font-size: 18px;">₹<%= product.productTotalPrice %></p>
                    </div>
                  </div>
                  <hr class="mb-4" style="background-color: #e0e0e0; opacity: 1;">
                  <% }); %>
                </div>
              </div>
  
              <div class="d-flex justify-content-between pt-2">
                <p class="fw-bold mb-0" style="font-size: 20px;">Shipping Address</p>
                <p class="text-muted mb-0" style="font-size: 20px;"><span class="fw-bold me-4">Total: </span>₹<%= order.totalPrice %></p>
              </div>
              <div class="d-flex justify-content-between pt-2">
                <p class="text-muted mb-0" style="font-size: 18px;"><%= order.address[0].firstName %> <%= order.address[0].lastName %></p>
                <p class="text-muted mb-0" style="font-size: 20px;"><span class="fw-bold me-4">Discount: </span>₹0.00</p>
              </div>
              <div class="d-flex justify-content-between">
                <p class="text-muted mb-0" style="font-size: 18px;"><%= order.address[0].address %></p>
                <p class="text-muted mb-0" style="font-size: 20px;"><span class="fw-bold me-4">Delivery Charges: </span>₹0.00</p>
              </div>
              <div class="d-flex justify-content-between mb-5">
                <p class="text-muted mb-0" style="font-size: 18px;"><%= order.address[0].town %>, <%= order.address[0].district %> -
                  <%= order.address[0].pincode %>, <%= order.address[0].state %></p>
              </div>
            </div>
            <div class="card-footer border-0 px-4 py-5"
              style="background-color: #46969d; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
              <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0" style="font-size: 28px;">Total Amount:<span
                  class="h2 mb-0 ms-2">₹<%= order.totalPrice %></span></h5>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  
  
</body>
</html>

    